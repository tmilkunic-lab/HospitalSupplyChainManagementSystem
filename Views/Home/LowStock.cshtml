@model IEnumerable<HospitalSupplyChainManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Low Stock Products";
}

<h1>Low Stock Products</h1>

<p>
    This list is generated by calling the SQL stored procedure
    <code>dbo.GetLowStockProducts</code> through EF Core.
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity In Stock</th>
            <th>Unit Price</th>
            <th>Supplier Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.QuantityInStock</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.SupplierId</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index">Back to Dashboard</a>
</p>
